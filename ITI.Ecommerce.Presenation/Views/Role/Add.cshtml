
@model RoleCreateModel
@inject IViewLocalizer localizer
<div class="row w-100 pt-5 px-xl-5">
    <h1 style="color:#0d6efd" >@localizer["Add Role"]</h1>
    <div class="card m-2  sm-col-11 xl-col-8" style="width: 40rem;">
        <form asp-action="Add" asp-controller="Role" method="post" class="py-5 px-xl-5">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group m-2">
        <label asp-for="Name"></label>
            <input asp-for="Name" class=" form-control m-2" />
        <span asp-validation-for="Name"></span>
    </div>
            <input type="submit" class="btn text-white mt-3 ms-5" style="background-color:#0d6efd" value="@localizer["Save"]" />
</form>
</div>
</div>