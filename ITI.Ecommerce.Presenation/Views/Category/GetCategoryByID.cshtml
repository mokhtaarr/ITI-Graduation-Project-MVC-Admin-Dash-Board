@model CategoryDto
<h1>Test GetCategoryByID</h1>
@if(ViewBag.Done == true){
    <a class="btn btn-success" asp-controller="Category" asp-action="Add">Add New Category</a>
    <table class="table table-striped table-dark table-responsive m-1">
    <thead>
        <tr>
            <th scope="col">Arabic</th>
            <th scope="col">English</th>
            <th scope="col">Update</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.NameAR</td>
            <td>@Model.NameEN</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Category" asp-action="Update" asp-route-id="@Model.ID">Update</a>
                </td>
                <td><a class="btn btn-danger" asp-controller="Category" asp-action="CDelete" asp-route-id="@Model.ID">Delete</a></td>
        </tr>
    </tbody>
</table>
}else{
<form method="post" asp-controller="Category" asp-action="GetCategoryByID">
    <div class="form-group">
        <label asp-for="ID"></label>
        <input asp-for="ID" class="form-control" />
    </div>
        <input style="background-color:#0d6efd" type="submit" value="Search" class="btn text-white" />
</form>
}