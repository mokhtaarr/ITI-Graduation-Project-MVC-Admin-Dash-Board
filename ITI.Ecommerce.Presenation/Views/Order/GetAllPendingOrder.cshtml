@model List<OrderDto>
@inject IViewLocalizer localizer
<div class="m-3">
<h1 style="color:#0d6efd"> @localizer["Pending Orders"]</h1>


<table class="table table-striped table-dark table-responsive m-1">
    <thead>
        <tr>
        <tr>
            <th scope="col">@localizer["Customer"]</th>
            <th scope="col">@localizer["Payment ID"]</th>
            <th scope="col">@localizer["Order Date"]</th>
         
            <th scope="col">@localizer["Delivery"]</th>
            <th scope="col">@localizer["Delete"]</th>
        </tr>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.CustomerId</td>
                <td>@order.PaymentId</td>
                <td>@order.OrderDate</td>
           
                <td>
                    <a class="btn text-white" style="background-color:#0d6efd" asp-controller="Order" asp-action="Delivered" asp-route-id="@order.ID">@localizer["Delivery"]</a>
                </td>
                <td><a class="btn btn-danger" asp-controller="Order" asp-action="Delete" asp-route-id="@order.ID">@localizer["Delete"]</a></td>
            </tr>
        }
    </tbody>
</table>

</div>