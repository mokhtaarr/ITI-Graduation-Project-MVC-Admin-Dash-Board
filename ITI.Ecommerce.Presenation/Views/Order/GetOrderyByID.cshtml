@model OrderDto
<h1>Test GetCategoryByID</h1>
@if (ViewBag.Done == true)
{
    <a class="btn btn-success" asp-controller="Order" asp-action="Add">Add New Order</a>
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">Customer ID</th>
                <th scope="col">Payment ID</th>
                <th scope="col">Order Date</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.CustomerId</td>
                <td>@Model.PaymentId</td>
                <td>@Model.OrderDate</td>
              
                <td>
                    <a class="btn btn-primary" asp-controller="order" asp-action="Update" asp-route-id="@Model.ID">Update</a>
                </td>
                <td><a class="btn btn-danger" asp-controller="order" asp-action="Delete" asp-route-id="@Model.ID">Delete</a></td>
            </tr>
        </tbody>
    </table>
}
else
{
    <form method="post" asp-controller="Order" asp-action="GetOrderyByID">
        <div class="form-group">
            <label asp-for="ID"></label>
            <input asp-for="ID" class="form-control" />
        </div>
        <input type="submit" value="Search" class="btn text-white" style="background-color:#0d6efd" />
    </form>
}