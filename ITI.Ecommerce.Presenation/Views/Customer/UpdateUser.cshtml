@model CustomerDto
@inject IViewLocalizer localizer
<div class="container-fluid">
    <div class="row p-4">

        <div class="col-2"></div>
        <div class="col-8 shadow-lg p-3 mb-5 rounded-3 text-bg-dark">
            <form data-ajax="true" data-ajax-loading="#loader" data-ajax-complete="BookAdd" method="post" asp-controller="Product" asp-action="UpdateValue" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly"></div>

                <div class="form-group">
                    <label asp-for="ID" hidden></label>
                    <input asp-for="ID" class="form-control" hidden />
                    <span asp-validation-for="ID" class="validation" hidden></span>
                </div>
                <div class="form-group">
                    <label asp-for="FullName"></label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName " class="validation"></span>
                </div>
                   <div class="form-group">
                    <label asp-for="Address"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address " class="validation"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MobileNumber"></label>
                    <input asp-for="MobileNumber" class="form-control" />
                    <span asp-validation-for="MobileNumber " class="validation"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email " class="validation"></span>
                </div>
   
                <input type="submit" value="@localizer["Update"]" class="btn text-white m-2" style="background-color:#0d6efd" />
               
            </form>
        </div>

        <div class="col-2"></div>
    </div>
</div>
